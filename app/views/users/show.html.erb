<center>
	<div style="width: 800px">
		<table border="1px" width="400px">
			<tr>
				<td align="right" width="80px">Name:</td>
				<td><%= @user.name %></td>
			</tr>
			<tr>
				<td align="right">Surname:</td>
				<td><%= @user.surname %></td>
			</tr>
			<tr>
				<td align="right">Age:</td>
				<td><%= @user.age %></td>
			</tr>
		</table>
		<div style="float: right">
			<%= link_to "back", :back %><br>
			<%= link_to "delete", user_path(@user.id), method: :delete, data: { confirm: 'Are you sure?' } %><br>
			<%= link_to "edit", edit_user_path(@user.id) %>
		</div>
	</div>
</center>

<br>
<center>
	<table border="1px">
		<thead>
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th colspan="3">Action</th>
			</tr>
		</thead>
		<tbody>
			<% @letters.each do |u| %>
				<tr>
					<td><%= u.titel %></td>
					<td><%= u.description %></td>
					<td><%= link_to "show", u %></td>
					<td><%= link_to "edit", edit_letter_path(id: u.id) %></td>
					<td><%= link_to "delete", letter_path(id: u.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>		
		</tbody>
	</table>
</center>