<%= link_to "new", new_user_path %>

<center>
	<table border="1px">
		<thead>
			<tr>
				<th>Name</th>
				<th>Surname</th>
				<th>Age</th>
				<th colspan="3">Action</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |u| %>
				<tr>
					<td><%= u.name %></td>
					<td><%= u.surname %></td>
					<td><%= u.age %></td>
					<td><%= link_to "show", u %></td>
					<td><%= link_to "edit", edit_user_path(id: u.id) %></td>
					<td><%= link_to "delete", user_path(id: u.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>		
		</tbody>
	</table>
</center>